                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "minlength": 3,
                        "maxlength": 100
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty12345",
                        "minlength": 6,
                        "maxlength": 36
                    }
                }
