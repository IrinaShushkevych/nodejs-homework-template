    "components": {
        "schemas": {
            "RegistrationRequest": {
                "required": [
                    "email",
                    "password",
                    "name"
                ],
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "example": "user@example.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty12345",
                        "minlength": 6
                    },
                    "name": {
                        "type": "string",
                        "description": "User's name",
                        "minlength": 2,
                        "example": "Adam"
                    },
                    "subscription": {
                        "type": "string",
                        "enum": [
                            "starter",
                            "pro",
                            "business"
                        ],
                        "default": "starter"
                    }
                },
                "example": {
                    "name": "Adam",
                    "email": "user@example.com",
                    "password": "qwert12345"
                }
            },
            "RegistrationResponse": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "example": "user@example.com"
                    },
                    "name": {
                        "type": "string",
                        "description": "User name",
                        "example": "Adam"
                    },
                    "subscription": {
                        "type": "string",
                        "description": "User subscription",
                        "example": "starter"
                    },
                    "avatarURL": {
                        "type": "string",
                        "description": "User gravatar from email",
                        "example": "https://s.gravatar.com/avatar/d415f0e30c471dfdd9bc4f827329ef48"
                    }
                },
                "example": {
                    "email": "user@example.com",
                    "name": "Adam",
                    "subscription": "starter",
                    "avatarURL": "https://s.gravatar.com/avatar/d415f0e30c471dfdd9bc4f827329ef48"
                }
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
