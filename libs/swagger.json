                        "example": "https://s.gravatar.com/avatar/d415f0e30c471dfdd9bc4f827329ef48"
                    },
                    "token": {
                        "type": "string",
                        "description": "User's token",
                        "example": "213jhjhu2h132h7eh27h71h"
                    }
                },
                "example": {
                    "user": {
                        "email": "user@example.com",
                        "name": "Adam",
